#include <iostream>

using namespace std;

bool estimpair(int n);
void afficheBase(int n);
void afficheVoid();
void arbre();

int main()
{

	arbre();
	
	return 0;
}


bool estimpair(int n)
{
  return n % 2 != 0;
}


void afficheBase(int n)
{
  for(int i = 0 ; i <= n ; i++)
    {
      cout << "*";
    }
  cout << endl;
}


void arbre()
{

  int nbBase = 0;
  int position = 0;
  int nbDeBase = 1;

  while(!estimpair(nbBase))
    {
      cout << "entrez un nombre impair" << endl;
      cin >> nbBase;
    }

  position = (nbBase / 2) + 1;
		

  for(int i = 0 ; i < position +1 ; i++)
    {
      if(position == i)
	afficheBase(nbDeBase);
      
      else
	cout << " ";

      nbDeBase+=2;
    } 
}
